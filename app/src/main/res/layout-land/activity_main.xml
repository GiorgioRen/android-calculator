<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/totalDisplay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.2"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:gravity="bottom|end"
            android:text="0"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v50"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_v75"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_h20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_h40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.40" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_h60"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.60" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_h80"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.80" />

            <Button
                android:id="@+id/buttonAllClear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="AC"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.LightGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h20"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v75"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="รท"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.Orange"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h20"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/guideline_v75"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="7"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h40"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v25"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_h20" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="8"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h40"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v50"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_v25"
                app:layout_constraintTop_toTopOf="@+id/guideline_h20" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="9"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h40"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v75"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_v50"
                app:layout_constraintTop_toTopOf="@+id/guideline_h20" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="ร"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.Orange"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h40"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_v75"
                app:layout_constraintTop_toTopOf="@+id/guideline_h20" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="4"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h60"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_h40" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h60"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v50"
                app:layout_constraintStart_toStartOf="@+id/guideline_v25"
                app:layout_constraintTop_toTopOf="@+id/guideline_h40" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="6"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h60"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v75"
                app:layout_constraintStart_toStartOf="@+id/guideline_v50"
                app:layout_constraintTop_toTopOf="@+id/guideline_h40" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="โ"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.Orange"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_v75"
                app:layout_constraintTop_toTopOf="@+id/guideline_h40" />

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h80"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_h60" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="2"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h80"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v50"
                app:layout_constraintStart_toStartOf="@+id/guideline_v25"
                app:layout_constraintTop_toTopOf="@+id/guideline_h60" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="3"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h80"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v75"
                app:layout_constraintStart_toStartOf="@+id/guideline_v50"
                app:layout_constraintTop_toTopOf="@+id/guideline_h60" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="+"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.Orange"
                app:layout_constraintBottom_toTopOf="@+id/guideline_h80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_v75"
                app:layout_constraintTop_toTopOf="@+id/guideline_h60" />

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="0"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_h80" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="."
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.DarkGray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_v75"
                app:layout_constraintStart_toStartOf="@+id/guideline_v50"
                app:layout_constraintTop_toTopOf="@+id/guideline_h80" />

            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/roundedbutton"
                android:onClick="pressButton"
                android:text="="
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:theme="@style/Button.Orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_v75"
                app:layout_constraintTop_toTopOf="@+id/guideline_h80" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>