<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator01" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/bg_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/bg_black</item>
    </style>
    <style name="Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/orange</item>
    </style>
    <style name="Button.LightGray" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/light_gray</item>
    </style>
    <style name="Button.DarkGray" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/dark_gray</item>
    </style>
</resources>